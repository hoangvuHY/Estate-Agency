<%include ../common/header %>
  <link rel="stylesheet" href="/stylesheets/login-register.css">

  <div class="register container">
    <div class="row register-container">
      <%include ./bg-left %>

        <form class="form login col s12 m6 l6 xl6">
          <div class="row">
            <div class="input-field col s12">
              <i class="material-icons prefix">email</i>
              <input id="icon_email" type="email" class="validate email-login">
              <label for="icon_email">Email</label>
            </div>
            <div class="input-field col s12">
              <i class="material-icons prefix">lock</i>
              <input id="icon_lock" type="password" class="validate password-login">
              <label for="icon_lock">Password</label>
            </div>
            <div class="submit">
              <button class="btn waves-effect waves-light register-submit login-submit" type="button">Login
              </button>
              <a href="/register">Are you already a member?</a>
            </div>
          </div>
        </form>
    </div>
  </div> 
  <%include ../common/footer %>

    <script src="/javascripts/login-register.js"></script>