<%include ../common/header %>
  <link rel="stylesheet" href="/stylesheets/login-register.css">

  <div class="register container">
    <div class="row register-container">
      <%include ./bg-left %>
        <form class="form col s12 m6 l6 xl6">
          <div class="row">
            <div class="input-field col s12">
              <i class="material-icons prefix">account_circle</i>
              <input id="icon_prefix" type="text" class="validate name-register">
              <label for="icon_prefix">Name</label>
            </div>
            <div class="input-field col s12">
              <i class="material-icons prefix">map</i>
              <input id="icon_map" type="text" class="validate address-register">
              <label for="icon_map">Address</label>
            </div>
            <div class="input-field col s12">
              <i class="material-icons prefix">date_range</i>
              <input id="icon-date-range" type="date" class=" birthday-register">
              <label for="icon-date-range">Birthday</label>
            </div>
            <div class="input-field col s12">
              <i class="material-icons prefix">email</i>
              <input id="icon_email" type="email" class="validate email-register">
              <label for="icon_email">Email</label>
            </div>
            <div class="input-field col s12">
              <i class="material-icons prefix">lock</i>
              <input id="icon_lock" type="password" class="validate password-register ">
              <label for="icon_lock">Password</label>
            </div>
            <div class="input-field col s12">
              <i class="material-icons prefix">lock</i>
              <input id="icon_lock-confirm" type="password" class="validate confirm-password-register ">
              <label for="icon_lock-confirm">Confirm Password</label>
            </div>
            <div class="submit">
              <button class="btn waves-effect waves-light register-submit" type="button">Register
              </button>
              <a href="/login">I am already a member</a>
            </div>
          </div>
        </form>
    </div>
  </div>
  <%include ../common/footer %>
    <script src="/javascripts/login-register.js"></script>